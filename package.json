{
  "name": "gather_globe",
  "version": "0.0.1",
  "description": "Hello world",
  "main": "index.js",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:front": "cd frontend && npm run dev",
    "dev:back": "cd backend && npm run dev",
    "setup": "run-p install:*",
    "lint:frontend": "cd frontend && prettier --write .",
    "install:client": "cd frontend && npm install",
    "install:server": "cd backend && npm install",
    "prepare": "husky install",
    "postmerge": "if git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep -q 'package.json'; then npm install; fi"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx}": "npm run lint:frontend"
  },
  "repository": "https://github.com/Thangnguyenvn98/GatheringGlobe.git",
  "author": "BinniesLite <89041460+BinniesLite@users.noreply.github.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/nodemailer": "^6.4.15",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier-eslint": "^16.3.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toggle": "^1.0.3",
    "@stripe/react-stripe-js": "^2.7.1",
    "@stripe/stripe-js": "^3.4.0",
    "@tailwindcss/typography": "^0.5.13",
    "@tiptap/extension-heading": "^2.3.1",
    "@tiptap/extension-underline": "^2.3.1",
    "@tiptap/react": "^2.3.1",
    "@tiptap/starter-kit": "^2.3.1",
    "formik": "^2.4.6",
    "nodemailer": "^6.9.13",
    "react-toggle": "^4.1.3",
    "run-p": "^0.0.0",
    "typescript": "^5.4.5",
    "yup": "^1.4.0"
  }
}
