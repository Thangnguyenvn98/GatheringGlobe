<html>
    <head>
        <style>
            /* Your styles here */
            img {
                max-width: 100%; /* Ensure images are responsive */
                height: auto; /* Maintain aspect ratio */
                margin-bottom: 10px; /* Space between images */
            }
        </style>
    </head>
    <body>
        <p>Account Email Address: {{email}}</p>
        <p>Full Name: {{firstName}} {{lastName}}</p>
        <p>Subject: {{subject}}</p>
        <p>Description: {{{description}}}</p> <!-- Use triple braces for HTML content -->
        {{#if attachments.length}}
            <p>Attachments:</p>
            <div>
                {{#each attachments}}
                    <img src="{{this}}" alt="Attachment"> <!-- Adjusted to use {{this}} -->
                {{/each}}
            </div>
        {{else}}
            <p>No attachments provided.</p>
        {{/if}}
    </body>
</html>
